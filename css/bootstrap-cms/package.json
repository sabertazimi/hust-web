    "stylelint-config-mass": "^5.3.6",
    "stylelint-webpack-plugin": "^3.0.1",
    "url-loader": "^4.1.1",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.2.0"
  },
  "dependencies": {
    "@ckeditor/ckeditor5-build-classic": "^29.2.0",
    "bootstrap": "^4.6.0",
    "jquery": "^3.3.1",
    "popper.js": "^1.14.7",
    "scrollreveal": "^4.0.5"
  }
}
