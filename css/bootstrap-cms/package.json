{
  "name": "bootstrap-cms",
  "version": "2.9.0",
  "description": "CMS custom theme for Bootstrap 4",
  "author": "sabertazimi",
  "license": "MIT",
  "homepage": "https://github.com/sabertazimi/hust-web",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sabertazimi/hust-web.git"
  },
  "bugs": {
    "url": "https://github.com/sabertazimi/hust-web/issues"
  },
  "keywords": [
    "bootstrap",
    "theme",
    "sass"
  ],
  "main": "./src/index.js",
  "engines": {
    "node": ">=9"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --mode production && pnpm build:post",
    "build:post": "mkdir -p ../../build/css/bootstrap-cms && mv ./build/* ../../build/css/bootstrap-cms",
    "dev": "cross-env NODE_ENV=development webpack serve --port 2333 --mode development --open",
    "lint": "stylelint ./src/**/*.{css,scss} && eslint ./src",
    "lint:fix": "stylelint ./src/**/*.{css,scss} --fix && eslint ./src --fix",
    "start": "pnpm dev"
  },
  "dependencies": {
    "@ckeditor/ckeditor5-build-classic": "^44.3.0",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.7",
    "scrollreveal": "^4.0.9"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-transform-class-properties": "^7.27.1",
    "@babel/plugin-transform-object-rest-spread": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@dg-scripts/eslint-config": "^5.21.6",
    "@dg-scripts/stylelint-config": "^5.21.6",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "cross-env": "^10.0.0",
    "css-loader": "^7.1.2",
    "eslint": "^9.33.0",
    "eslint-webpack-plugin": "^5.0.2",
    "file-loader": "^6.2.0",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.3",
    "image-webpack-loader": "^8.1.0",
    "mini-css-extract-plugin": "^2.9.4",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "postcss-nested": "^7.0.2",
    "prettier": "^3.6.2",
    "sass": "^1.90.0",
    "sass-loader": "^16.0.5",
    "style-loader": "^4.0.0",
    "stylelint": "^16.23.1",
    "stylelint-webpack-plugin": "^5.0.1",
    "typescript": "^5.9.2",
    "url-loader": "^4.1.1",
    "webpack": "^5.101.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}
