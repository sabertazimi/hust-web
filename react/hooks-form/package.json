{
  "name": "react-hooks-form",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://sabertazimi.github.io/hust-web/react/hooks-form",
  "dependencies": {
    "bulma": "^0.9.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@sabertazimi/react-scripts": "^5.3.3"
  },
  "scripts": {
    "build": "react-scripts build",
    "postbuild": "rm -fr src && mv ./build/* .",
    "eject": "react-scripts eject",
    "start": "react-scripts start",
    "test": "react-scripts test"
  },
  "eslintConfig": {
    "extends": [
      "bod",
      "bod/jest",
      "plugin:prettier/recommended"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-bod",
      "stylelint-prettier/recommended"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
