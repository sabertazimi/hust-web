{
  "name": "react-hooks-form",
  "version": "2.9.0",
  "homepage": "https://sabertazimi.github.io/hust-web/react/hooks-form",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "build": "react-scripts build && pnpm build:post",
    "build:post": "mkdir -p ../../build/react/hooks-form && mv ./build/* ../../build/react/hooks-form",
    "lint": "stylelint ./src/**/*.{css,scss} && eslint ./src",
    "lint:fix": "stylelint ./src/**/*.{css,scss} --fix && eslint ./src --fix",
    "start": "react-scripts start",
    "test": "react-scripts test"
  },
  "dependencies": {
    "bulma": "^1.0.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@sabertazimi/react-scripts": "^5.21.4"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-bod"
    ],
    "plugins": [
      "stylelint-prettier"
    ],
    "rules": {
      "prettier/prettier": true
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
