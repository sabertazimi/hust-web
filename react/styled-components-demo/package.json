{
  "name": "styled-components-demo",
  "version": "2.8.0",
  "homepage": "https://sabertazimi.github.io/hust-web/react/styled-components-demo",
  "scripts": {
    "build": "react-scripts build && pnpm build:post",
    "build:post": "mkdir -p ../../build/react/styled-components-demo && mv ./build/* ../../build/react/styled-components-demo",
    "build:profile": "react-scripts build --profile",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "start": "react-scripts start",
    "start:https": "HTTPS=true react-scripts start",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage",
    "test:debug": "react-scripts --inspect-brk test --runInBand --no-cache",
    "test:node": "react-scripts test --env=node"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.0.1",
    "react-is": "^18.2.0",
    "styled-components": "^6.1.8"
  },
  "devDependencies": {
    "@sabertazimi/react-scripts": "^5.20.1",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.77",
    "@types/react-dom": "^18.2.25",
    "@types/react-is": "^18.2.4",
    "@types/styled-components": "^5.1.34",
    "typescript": "^5.4.5"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-bod"
    ],
    "plugins": [
      "stylelint-prettier"
    ],
    "rules": {
      "prettier/prettier": true
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
