    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "cross-env": "^10.0.0",
    "css-loader": "^7.1.2",
    "eslint": "^9.36.0",
    "eslint-webpack-plugin": "^5.0.2",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.4",
