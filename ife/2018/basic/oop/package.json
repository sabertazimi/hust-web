    "dev": "cross-env NODE_ENV=development webpack serve --port 2333 --mode development --open",
    "lint": "stylelint ./src/**/*.{css,scss} && eslint ./src",
    "lint:fix": "stylelint ./src/**/*.{css,scss} --fix && eslint ./src --fix",
    "start": "pnpm dev"
  },
