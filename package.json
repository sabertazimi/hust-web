{
  "name": "hust-web",
  "version": "1.2.0",
  "description": "A repo for learning demo archives",
  "main": "index.js",
  "scripts": {
    "build": "lerna run build",
    "lint": "lerna run lint",
    "postbuild": "mkdir -p ./build && cp -fr ./css ./js ./fcc ./ife ./react ./index.html ./index.css ./build",
    "release": "lerna version --force-publish --no-push",
    "start": "npm start -w mvvm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sabertazimi/hust-web.git"
  },
  "keywords": [
    "html",
    "html5",
    "css",
    "css3",
    "js",
    "javascript",
    "ecmascript",
    "react",
    "reactjs",
    "node",
    "nodejs",
    "front-end",
    "front-end development",
    "web",
    "web development"
  ],
  "author": "sabertazimi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sabertazimi/hust-web/issues"
  },
  "homepage": "https://github.com/sabertazimi/hust-web",
  "devDependencies": {
    "lerna": "^4.0.0"
  },
  "workspaces": [
    "./packages/*",
    "./css/*",
    "./ife/2018/*",
    "./ife/2018/basic/*",
    "./react/*"
  ]
}
