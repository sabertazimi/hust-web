{
  "name": "hust-web",
  "description": "A repo for learning demo archives",
  "scripts": {
    "build": "yarn build:prepare && lerna run build && yarn build:post",
    "build:prepare": "rm -fr ./build && mkdir -p ./build",
    "build:post": "cp -fr index.html index.css ./build",
    "clean": "lerna clean --yes",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "release": "node scripts/release.js --push",
    "test": "lerna run test",
    "start": "yarn workspace styled-components-demo start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sabertazimi/hust-web.git"
  },
  "keywords": [
    "html",
    "html5",
    "css",
    "css3",
    "js",
    "javascript",
    "ecmascript",
    "react",
    "reactjs",
    "node",
    "nodejs",
    "front-end",
    "front-end development",
    "web",
    "web development"
  ],
  "author": "sabertazimi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sabertazimi/hust-web/issues"
  },
  "homepage": "https://github.com/sabertazimi/hust-web",
  "packageManager": "yarn@3.6.0",
  "devDependencies": {
    "@dg-scripts/eslint-config": "^5.13.5",
    "@dg-scripts/stylelint-config": "^5.13.5",
    "chalk": "^4.1.2",
    "consola": "^3.2.2",
    "eslint": "^8.43.0",
    "lerna": "^7.1.1",
    "prettier": "^2.8.8",
    "semver": "^7.5.3",
    "stylelint": "^15.9.0",
    "typescript": "^5.1.6"
  },
  "dependenciesMeta": {
    "scrollreveal": {
      "built": false
    }
  },
  "workspaces": [
    "./css",
    "./css/bootstrap-cms",
    "./fcc",
    "./ife/2016",
    "./ife/2016/stageTwo/task26",
    "./ife/2016/stageTwo/task27",
    "./ife/2016/stageTwo/task28",
    "./ife/2018",
    "./ife/2018/basic/mis",
    "./ife/2018/basic/oop",
    "./ife/2018/mvvm",
    "./js",
    "./js/mpm",
    "./node/hust-oom",
    "./react",
    "./react/*"
  ]
}
