{
  "name": "mpmjs",
  "version": "2.9.0",
  "packageManager": "pnpm@10.6.1",
  "description": "Minimal package manager",
  "author": "sabertazimi",
  "license": "MIT",
  "homepage": "https://github.com/sabertazimi/mpm#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sabertazimi/mpm.git"
  },
  "bugs": {
    "url": "https://github.com/sabertazimi/mpm/issues"
  },
  "keywords": [
    "npm",
    "pnpm",
    "package manager"
  ],
  "main": "index.js",
  "bin": {
    "mpm": "./src/index.js"
  },
  "files": [
    "!src/**/*.test.js",
    "src/**/*.js"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "start": "node src/index.js",
    "test": "jest --config ./jest.config.js",
    "test:watch": "jest --watch"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/*.{js}",
      "!**/index.js",
      "!**/utils.js"
    ]
  },
  "dependencies": {
    "commander": "^13.1.0",
    "fs-extra": "^11.3.0",
    "gunzip-maybe": "^1.4.2",
    "log4js": "^6.9.1",
    "node-fetch": "^2.7.0",
    "ora": "^8.2.0",
    "semver": "^7.7.1",
    "tar-fs": "^3.0.8",
    "tar-stream": "^3.1.7"
  },
  "devDependencies": {
    "@dg-scripts/eslint-config": "^5.21.5",
    "eslint": "^9.22.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  }
}
